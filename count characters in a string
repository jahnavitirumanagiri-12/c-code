#include <stdio.h>

int main() {
    char str[100];
    int count = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);  // read string with spaces

    for(int i = 0; str[i] != '\0'; i++) {
        if(str[i] != '\n')  // ignore newline character
            count++;
    }

    printf("Number of characters: %d\n", count);
    return 0;
}
